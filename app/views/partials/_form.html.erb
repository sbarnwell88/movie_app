<%= form_for @film do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :genre %>
  <%= f.text_field :genre %>

  <%= f.label :year %>
  <%= f.number_field :year %>

  <%= f.label :synopsis %>
  <%= f.text_field :synopsis %>

  <%= f.label :picture %>
  <%= f.text_field :picture %>

  <%= f.submit %>
<% end %>